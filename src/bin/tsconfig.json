{
    "compilerOptions": {
        "sourceMap": false,
        "newLine": "LF",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "downlevelIteration": true,
        "noFallthroughCasesInSwitch": true,
        "composite": true,
        "rootDir": ".",
        "module": "ES2022",
        "target": "ES2022",
        "esModuleInterop": true,
        "moduleResolution": "bundler"
    },
    "include": ["**/*.ts"],
    "exclude": ["initialize-account-theme/boilerplate"]
}
